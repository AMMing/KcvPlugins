<Window x:Class="AMing.WindowsNotifierEx.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:contorls="clr-namespace:AMing.WindowsNotifierEx"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False"
        Title="ToastWindow" Height="320" Width="360" Topmost="True">
    <StackPanel x:Name="sp_toasts">
        <contorls:ToastItemControl Margin="0,15,0,5"/>
        <contorls:ToastItemControl Margin="0,5"/>
        <contorls:ToastItemControl Margin="0,5"/>
    </StackPanel>
</Window>
