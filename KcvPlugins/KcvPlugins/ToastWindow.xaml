<Window x:Class="KcvPlugins.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:contorls="clr-namespace:KcvPlugins"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Title="ToastWindow" Height="360" Width="360" Topmost="True">
    <Grid>
        <StackPanel x:Name="sp_toasts">
            <contorls:ToastItemControl Margin="0,15,0,5"/>
            <contorls:ToastItemControl Margin="0,5"/>
            <contorls:ToastItemControl Margin="0,5"/>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Height="26" Margin="60,305,0,-31" Width="81" Click="Button_Click"/>
    </Grid>
</Window>
